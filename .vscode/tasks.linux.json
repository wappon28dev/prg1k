{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "build_gcc",
      "command": "gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}/out/a"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "デバッガーによって生成されたタスク。"
    },
    {
      "type": "cppbuild",
      "label": "build_mingw",
      "command": "x86_64-w64-mingw32-gcc",
      "args": [
        "${file}",
        "-o",
        "${workspaceFolder}/out/a.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "デバッガーによって生成されたタスク。"
    },
    {
      "label": "build",
      "dependsOn": [
        "build_gcc",
        "build_mingw"
      ]
    }
  ],
  "version": "2.0.0"
}
